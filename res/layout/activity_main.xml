<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:background="@color/custom"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <EditText
        android:id="@+id/englishWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
       
        android:textColor="#421010" 
        android:ems="10" />
   

    <Button
        android:id="@+id/translateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/englishWord"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:onClick="toPigLatin"
        android:text="Translate" />

    <TextView
        android:id="@+id/showText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/englishWord"
        android:layout_alignRight="@+id/englishWord"
        android:layout_below="@+id/translateButton"
        android:textColor="#421010" 
        android:layout_marginTop="61dp"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>